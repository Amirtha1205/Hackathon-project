    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#searchButton').click(function () {
                const city = $('#locationInput').val();
                if (city) {
                    fetchWeatherData(city);
                }
            });

            function fetchWeatherData(city) {
                const apiKey = 'https://api.openweathermap.org/data/2.5/weather?q={city name}&appid={API key}'; // Replace with your OpenWeatherMap API key
                const apiUrl = `http://api.openweathermap.org/geo/1.0/direct?q={city name},{state code},{country code}&limit={limit}&appid={API key}`;

                $.get(apiUrl, function(data) {
                    // Display weather data
                    $('#currentWeather').show();
                    $('#cityName').text(`${data.name}, ${data.sys.country}`);
                    $('#temp').text(`Temperature: ${data.main.temp}Â°C`);
                    $('#humidity').text(`Humidity: ${data.main.humidity}%`);
                }).fail(function() {
                    alert("City not found. Please try again.");
                });
            }
        });
    </script>
